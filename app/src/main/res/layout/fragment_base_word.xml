<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="com.faruk.miwok.viewmodel.WordViewModel" />
        <variable
            name="viewModel"
            type="WordViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
